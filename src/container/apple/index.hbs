<div class="page">
  <div class="section header">
    <div class="section__content">
      {{#with header}}
      <header class="header__container">
        <div class="header__block">
          <img src="/svg/apple.svg" alt="Apple" class="header__icon">
          <nav class="header__block">
            {{#each links}}
            <a href="{{url}}" class="header__link">{{text}}</a>
            {{/each}}
          </nav>
        </div>
        <div class="header__block">
          <a href="#">
            <img src="/svg/search.svg" alt="Search" class="header__icon">
          </a>
          <a href="#">
            <img src="/svg/profile.svg" alt="Profile" class="header__icon">
          </a>
        </div>

      </header>
      {{/with}}
    </div>
  </div>
  {{!-- ///////////// --}}
  {{#with header.ad}}
  <div class="section__adv">
    <div class="adv">
      <div class="adv_text product__action">{{title}}
        <div class="adv_text">
          <a href="{{link.url}}" class="product__link adv__link">{{link.text}}</a>
        </div>
      </div>
    </div>
  </div>
  {{/with}}
